# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string for Kratos
# Format: postgres://username:password@host:port/database?sslmode=disable
DSN=postgres://admin:secret@postgres:5432/kratos_db?sslmode=disable

# ============================================
# Kratos Security Secrets
# ============================================
# IMPORTANT: Generate strong random secrets for production!
# You can generate secrets using: openssl rand -hex 32

# Cookie encryption secret (must be 32 characters or more)
SECRETS_COOKIE=PLEASE-CHANGE-ME-I-AM-VERY-INSECURE-GENERATE-A-STRONG-SECRET

# Cipher encryption secret (must be 32 characters or more)
SECRETS_CIPHER=PLEASE-CHANGE-ME-I-AM-VERY-INSECURE-GENERATE-A-STRONG-SECRET

# ============================================
# Email Configuration (SMTP)
# ============================================
# SMTP connection URI for sending verification and recovery emails
# Format: smtp://username:password@smtp-server:port/
# Note: URL-encode special characters in password (e.g., @ = %40, * = %2A)
COURIER_SMTP_CONNECTION_URI=smtp://your-email@example.com:your-password@smtp.example.com:587/

# Email address that appears as sender
COURIER_SMTP_FROM_ADDRESS=noreply@example.com

# Name that appears as sender
COURIER_SMTP_FROM_NAME=Your App Name

# ============================================
# Kratos Ports
# ============================================
# Public API port (used by frontend applications)
KRATOS_PUBLIC_PORT=4433

# Admin API port (used by backend services)
KRATOS_ADMIN_PORT=4434

# ============================================
# Flow Configuration
# ============================================
# How long verification codes are valid (in minutes)
METHODS_CODE_CONFIG_LIFESPAN=120m

# Minimum password length requirement
METHODS_PASSWORD_CONFIG_MIN_PASSWORD_LENGTH=6

# How long recovery flows are valid (in minutes)
FLOWS_RECOVERY_LIFESPAN=120m

# How long privileged sessions last (in minutes)
FLOWS_SETTINGS_PRIVILEGED_SESSION_MAX_AGE=15m

# How long verification flows are valid (in minutes)
FLOWS_SETTINGS_VERIFICATION_LIFESPAN=120m
