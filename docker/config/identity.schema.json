{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "Email",
          "minLength": 3,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              },
              "passkey": {
                "display_name": true
              }
            },
            "verification": {
              "via": "email"
            },
            "recovery": {
              "via": "email"
            }
          }
        },
        "name": {
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "first": {
                  "title": "First Name",
                  "type": "string",
                  "minLength": 1
                },
                "last": {
                  "title": "Last Name",
                  "type": "string",
                  "minLength": 1
                }
              },
              "required": ["first", "last"],
              "additionalProperties": false
            }
          ]
        },
        "role": {
          "type": "string",
          "enum": ["user", "superadmin"],
          "title": "Role",
          "default": "user"
        }
      },
      "required": ["email", "role"],
      "additionalProperties": false
    }
  }
}
